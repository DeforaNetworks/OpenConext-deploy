{% for host in groups["mongod_arbiters"] %}
rs.addArb("{{ hostvars[host].mongo_hostname }}:{{ mongod_port }}");
{% endfor %}
{% for host in groups["mongod_slaves"] %}
rs.add("{{ hostvars[host].mongo_hostname }}:{{ mongod_port }}");
{% endfor %}
rs.initiate( { _id: "configReplSet", configsvr: true, members: [ {% for host in groups["mongo_servers"] %} { _id: {{ loop.index }}, host: "{{hostvars[host].mongo_hostname }}:{{ mongod_port }}"},  {% endfor %}   ] } )
printjson(rs.status());
