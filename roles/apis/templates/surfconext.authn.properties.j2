##########################################################################
# The following properties are the responsibility of Maintenance. The    #
# values depend on the environment and are unknown to the developers     #
##########################################################################

entityId={{ apis.entity_id }}
assertionConsumerURI=https://apis.{{ base_domain }}/oauth2/authorize
idpUrl={{ engineblock.idp_url }}
idpCertificate={{ engineblock_crt_content.stdout }}
idpEntityId={{ engineblock.idp_entity_id }}
spPrivateKey={{ apis_key_content.stdout }}
spCertificate={{ apis_crt_content.stdout }}

# When using SURFconext, this should be: urn:oid:1.3.6.1.4.1.1076.20.40.40.1
samlUuidAttribute=urn:oid:1.3.6.1.4.1.1076.20.40.40.1

# The group where one need to be a member of for authorization in the JavaScript client apis admin
admin.client.apis.teamname={{ apis.group_name }}

openConextApiClient=nl.surfnet.coin.api.client.OpenConextOAuthClientImpl

api-baseurl=https://api.{{ base_domain }}/v1/
api-consumerkey={{ apis.api.consumer_key }}
api-consumersecret={{ apis.api.consumer_secret | vault(env) }}
api-callbackuri=https://apis.{{ base_domain }}/oauth2/authorize?apiOauthCallback\=true
api-enrich-principal=true
