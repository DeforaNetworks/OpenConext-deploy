externalProviders.config.path = file://{{ voot_dir }}/externalProviders.yml

logging.config=file://{{ voot_dir }}/logback.xml
server.port={{ springapp_tcpport }}

# The name under which this Oauth2 resource is registered with the Oauth2 Authorization server.
vootservice.oauthResourceId = groups

# Details needed so that we may check tokens presented to us by clients. This application uses them to authenticate via
# Basic authentication with the oAuth server.
oauth.checkToken.endpoint.url=https://authz.{{ base_domain }}/oauth/check_token
oauth.checkToken.clientId=vootservice
oauth.checkToken.secret={{ voot.resource_checking_secret | vault(env) }}
