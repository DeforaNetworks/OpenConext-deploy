Listen {{ apache_app_listen_address.welcome }}:10{{ loadbalancing.welcome.port }}
<Virtualhost {{ apache_app_listen_address.welcome }}:10{{ loadbalancing.welcome.port }}>
    # General setup for the virtual host, inherited from global configuration
    ServerName {{ base_domain }}:443

    DocumentRoot /var/www/welcome

    # Use separate log files for the SSL virtual host; note that LogLevel
    # is not inherited from httpd.conf.
    ErrorLog logs/welcome_ssl_error_log
    TransferLog logs/welcome_ssl_access_log
    LogLevel warn

</VirtualHost>
